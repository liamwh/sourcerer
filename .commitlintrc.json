{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "build",
                "chore",
                "ci",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style",
                "test"
            ]
        ],
        "subject-full-stop": [
            2,
            "never",
            "."
        ],
        "header-max-length": [
            2,
            "always",
            72
        ]
    }
}